<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<constant name="struts.devMode" value="true" />  <!-- allows us to see more debug messages in the log file. -->

	<package name="basicstruts2" extends="struts-default">

        <!-- If no class attribute is specified the framework will assume success and 
        render the result index.jsp -->
        <!-- If no name value for the result node is specified the success value is the default -->
		<action name="index">
			<result>/index.jsp</result>
		</action>
		
		<!-- If the URL is hello.action then call the execute method of class HelloWorldAction.
		If the result returned by the execute method is success render the HelloWorld.jsp -->
		<action name="hello" class="com.kati.helloworld.action.HelloWorldAction" method="execute">
			<result name="success">/HelloWorld.jsp</result>
			<!-- Results have optional name and type attributes. The default name value is "success". -->
			<result name = "error">/AccessDenied.jsp</result>
		</action>

     <!-- <action name = "something" class = "com.kati.helloworld.action.ThirdAction" method = "execute">
            <result name = "success">/Something.jsp</result>
            <result name = "error">/AccessDenied.jsp</result>
        </action> -->

		<!-- more actions can be listed here -->

	</package>

	<!-- more packages can be listed here -->



</struts>
